<% @lists.each do |list| %>
  <div class="row">
    <div class="col-md-8">
      <%= render list %>
    </div>
    <div class="col-md-2">
      <% f = Favorito.where(list_id: list, user_id: @user).first %>
      <% if f %>
        <%= link_to user_list_favorito_delete_path(@user, list, f.id), method: :delete, class: "btn btn-sm btn-default form-control" do %>Remover Favorito <span class="glyphicon glyphicon-star"></span><% end %>
      <% else %>
        <%= link_to user_list_favorito_path(@user, list), method: :post, class: "btn btn-sm btn-default form-control" do %>Adicionar Favorito <span class="glyphicon glyphicon-star-empty"></span><% end %>
      <% end %>
      <%= link_to "Ver Lista", user_list_path(@user, list), class: "btn btn-sm btn-default form-control" %>
    </div>
  </div>
  <br />
<% end %>
