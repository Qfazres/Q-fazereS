<h1>Minhas Listas</h1>
<br />

<% @lists.each do |list| %>
  <div class="row">
    <div class="col-md-8">
      <%= render list %>
      <p>
        Público: <%= list.public ? "Sim" : "Não" %>
      </p>
    </div>
    <div class="col-md-2">
      <%= link_to "Ver Lista", user_list_path(@user, list), class: "btn btn-sm btn-default form-control" %>
      <%= link_to "Editar", edit_user_list_path(@user, list), class: "btn btn-sm btn-default form-control" %>
      <%= link_to "Deletar", [@user, list], method: :delete, data: { confirm: "Tem certeza que deseja deletar?" }, class: "btn btn-sm btn-default form-control" %>
    </div>
  </div>
  <br/>
<% end %>
